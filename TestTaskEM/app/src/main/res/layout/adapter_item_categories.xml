<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/categories_item_card_height"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="7dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:id="@+id/categoriesTab"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivCategoryImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/round_image_view"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tvCategoryName"
                android:layout_width="@dimen/categories_item_text_width"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/categories_item_text_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/categories_item_text_size"
                android:textStyle="bold"
                android:text="Пекарни и кондитерские" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>