<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/popup_item_change_account_photo_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/popup_photo_width"
    android:layout_height="@dimen/popup_photo_height"
    android:layout_gravity="center"
    android:background="@color/transparent"
    app:cardElevation="0dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="@dimen/popup_photo_width"
        android:layout_height="@dimen/popup_photo_height"
        android:scaleType="fitXY"
        app:shapeAppearanceOverlay="@style/round_image_view"
        android:background="@color/white">

    </com.google.android.material.imageview.ShapeableImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/popup_photo_padding"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_exit" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivPhoto"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_foreground"/>

        <Button
            android:id="@+id/btnChangeImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:backgroundTint="#3364DF"
            android:paddingVertical="15dp"
            android:text="change image"
            app:cornerRadius="12dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>